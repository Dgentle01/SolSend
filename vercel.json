{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "yarn build"
      }
    },
    {
      "src": "backend/vercel_handler.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/vercel_handler.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/frontend/build/static/$1"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg))",
      "dest": "/frontend/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/index.html"
    }
  ],
  "env": {},
  "build": {
    "env": {
      "REACT_APP_SOLANA_NETWORK": "devnet",
      "REACT_APP_SOLANA_RPC": "https://api.devnet.solana.com",
      "DEVELOPER_WALLET": "7N2NBbR2bXJkga5HsFUAgAi4rBtAr5VSVJdvkYXq8vxk"
    }
  },
  "functions": {
    "backend/vercel_handler.py": {
      "maxDuration": 30
    }
  }
}